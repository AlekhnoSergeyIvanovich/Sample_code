@model films.Models.PageList<DAL.Entities.Film>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    @{
        DAL.Entities.Film fPage = @Model.FirstOrDefault(id => id.Id > 0);
    
        <tr>
            <th>
                @Html.DisplayNameFor(model => fPage.NameFilm)
            </th>
            <th>
                @Html.DisplayNameFor(model => fPage.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => fPage.Producer)
            </th>
            <th></th>
        </tr>
    
    }
    

    @foreach (var item in Model)
    {
        @Html.Partial("IndexPartial", item)
    }

</table>
@Html.Partial("PagerPartial", Model)